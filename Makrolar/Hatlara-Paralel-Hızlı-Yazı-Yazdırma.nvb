Sub Main
dim mesaj,yolyaz,koordinat,yaziboyu,yaziacisi,yazi
dim ss,o,bd
dim c1,c2
with Netcad

set koordinat = .newc(0,0,0)
set bd = .newbdialog ("Hat Nesnesine Paralel Hýzlý Yazý Yaz")
bd.getdistance "grkmyaziboyu","Yazý Boyu : ","1",2
bd.PutPrompt ""
bd.getstring "grkmyazi","Yazý : ","Y  O  L",50
bd.showmodal
yaziboyu = bd.valuebyname ("grkmyaziboyu")
yazi = bd.valuebyname ("grkmyazi")

set ss = .NewSelectStatus
while .SelectObjectInstant ("Açýsý Alýnacak Hat Seç",1,array(oline),ss)
set o = ss.objects(0)
if o.p1.y=0 and o.p1.x=0 then exit sub 'Nokta seçilmezse komuttan çýk.
set c1 = .newc(o.p1.y, o.p1.x, 0)
set c2 = .newc(o.p2.y, o.p2.x, 0)
yaziacisi = HatAciHesapla(c1,c2)
.drawobject o,-1

if .SelectPoint("Yazýnýn Yerleþtirileceði Yeri Seçiniz", koordinat, 2) then
set yolyaz = .maketext(koordinat,yazi,0,0,yaziboyu,yaziacisi,"M",0)
.addobject(yolyaz)
end if

'mesaj=Msgbox("Ýþlem Baþarýyla Tamamlandý",vbInformation, "Salih Görkem Tabak")
wend
end with
set ss = nothing
set o = nothing
End Sub
