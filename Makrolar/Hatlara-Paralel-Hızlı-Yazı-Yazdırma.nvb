'Doðrunun açýsýný bulacak fonksiyon
function HatAciHesapla(c1,c2)
dim m,aci,pi
pi = 3.14159265358978
dim farkx,farky
	farkx = c1.x-c2.x
	farky = c1.y-c2.y
		if farkx = 0 AND farky = 0 then 
			aci = 0 
		end if
		if farkx = 0 then 
			aci = 0 
		end if
		if farky = 0 then 
			aci = pi/2 
		end if
		if farkx<0 AND farky<0 then
			m = abs(farkx)/abs(farky)
			aci=atn(m)
		end if
		if farkx>0 AND farky>0 then 
			m = abs(farkx)/abs(farky)
			aci=atn(m)
		end if
		if farky<0 AND farkx>0 then
			m = abs(farkx)/abs(farky)
			aci=atn(m)
			aci=(pi*2)-aci 
		end if
		if farky>0 AND farkx<0 then
			m = abs(farkx)/abs(farky)
			aci=atn(m)		
			aci=(pi*2)-aci  
		end if
	HatAciHesapla=aci
end function